	<%= link_to "Bookmarks",bookmark_url(current_user.id),:id => current_user.id %> 

	</div>
	
	


	<div id="alertmsg">


		    <%= flash[:error] || flash[:success] %>



	<%= notice %>
	<%= alert %>
	</div>
	</body>
	</html>
