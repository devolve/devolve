<div id="codehubform">
	<h3 id="codehubheading"> Add a code block to your code hub, and start sharing </h3>
	<br />
	<%= form_for :code,:url =>{:controller=>'codes',:action=> 'save'} do |f| %>
		<%= render 'shared/error_messages', :object => f.object %>
	 <div class="field" id="codehubinnerform">

		<%= f.label :Title, :id => "code_title_label"%>
		<%= f.text_field :title %>
		<br/>
		<br/>
		<%=f.label :langauge, :id=>"code_langauge_label"%>
		<%= f.text_field :langauge%>
			<br/>
			<br/>
			<%= f.label :Code_description, :id=>"code_description_label"%>
		<%= f.text_area :description %> 
		<%= f.label :Enter_your_code_here, :id=>"code_content_label"%>
	<%= f.text_area :content,:value=>'<code lang="Enter_your_language_here"> 
	
	   Enter your code here....  
	
	</code>' %> </div>

	<div class="actions"> <%= f.submit "Submit" %>
		<input type="button" value="Cancel" onclick="window.close()" id="code_cancel"/>
	</div> <% end %>

	
	</div>


	</div>
	<style>
	div.floating-menu {position:fixed;bottom:10px;background:#6b238e;border:1px solid #ffcc00;width:600px;z-index:100;-webkit-border-radius: 10px;
	  -moz-border-radius: 10px;
	  border-radius: 10px;}
	div.floating-menu a, div.floating-menu h3 {display:inline;margin:0 0.5em;}
	div.floating-menu a {color:#fff;padding:5px;}
	</style>
	<div class="floating-menu">
	<h3 style="color:#ff0">Quick Menu</h3>
	<%= link_to "Home",root_path %>
	<%= link_to "Communities",communities_index_path %>
	<%= link_to "Messages",mailbox_index_path %>
	<%= link_to "Code Hub","/codes/#{current_user.id}"%>
	<%= link_to "Bookmarks",bookmark_url(current_user.id),:id => current_user.id %> 

	</div>
	
