<%= content_for :extra_css do %>
<%= stylesheet_link_tag "signin" %>
<% end %>
<div id="html_new">

<%= csrf_meta_tag %>
<div id="header"><div id="logoname">Devolve</div></div>
<link  href="http://fonts.googleapis.com/css?family=Rock+Salt:regular" rel="stylesheet" type="text/css" />



<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email,:id =>"email_lab" %><br />
	<div id="img_e">
  <%= f.text_field :email %></p></div>

  <p><%= f.label :password %><br />
	<div id="img_p">
  <%= f.password_field :password %></p></div>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Sign in" %></p>

<%= render :partial => "devise/shared/links" %>
<% end %>



<img src="/images/ajax-loader.gif" class="hidden" id="spinner" />
</div>