<%= content_for :extra_css do %>
<%= stylesheet_link_tag "signin" %>
<% end %>
<%= content_for :extra_js do %>
<%= javascript_include_tag "signin" %>
<% end %>
<div id="html_new" style="float:top;">

<div id="header"><div id="logoname" >Devolve</div></div>
<link  href="http://fonts.googleapis.com/css?family=Rock+Salt:regular" rel="stylesheet" type="text/css" />



<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.label :email,:id =>"email_lab" %>
	<div id="img_e">
  <%= f.text_field :email ,:placeholder=>"Enter your Email"%>
</div>
<br />
  <%= f.label :password,:id => "pass_lab" %>
	<div id="img_p">
  <%= f.password_field :password,:placeholder=>"Enter password" %></div>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me ,:id=> "lab_rem"%></p>
  <% end -%>

 
  <p><%= f.submit "Sign in"%></p>
 <%= link_to "I can't access my account",  home_help_path(resource_name),:id=>"cant_acc" %>
<% end %>

	
</div>
